<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="BodyFitnessPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>bodyfitness.pessoas.caracteristicas.Endereco</class>
    <class>bodyfitness.pessoas.caracteristicas.Cargo</class>
    <class>bodyfitness.pessoas.funcionarios.Funcionario</class>
    <class>bodyfitness.pessoas.funcionarios.Administrador</class>
    <class>bodyfitness.pessoas.generico.Cliente</class>
    <class>bodyfitness.pessoas.caracteristicas.corporal.CondicionamentoFisico</class>
    <class>bodyfitness.pessoas.caracteristicas.corporal.DobrasCutaneas</class>
    <class>bodyfitness.pessoas.caracteristicas.corporal.Indices</class>
    <class>bodyfitness.pessoas.caracteristicas.corporal.MembrosInferiores</class>
    <class>bodyfitness.pessoas.caracteristicas.corporal.MembrosSuperiores</class>
    <class>bodyfitness.pessoas.generico.Pessoa</class>
    <shared-cache-mode>ALL</shared-cache-mode>
    <validation-mode>NONE</validation-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bodyfitness"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
